<div class="teaser">

	<h4><a href="{{ article.url | prepend: site.baseurl }}">{{ article.title }}</a></h4>
	<p class="date">{{ article.date | date: "%-d %B %Y"}}</p>
	<p>{{ article.description }}</p>
	<p class="tags xs">
		{% for tag in article.tags %}
			<span>{{ tag }}</span>
		{% endfor %}
	</p>
	<hr>
</div>

